{
    "version": "next",
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../dist/",
        "module": "commonjs",
        "sourceMap": true,
        "target": "ES5"
    },
    "filesGlob": [
        "./rupert.ts",
        "./**/*.spec.ts"
    ],
    "files": [
        "./rupert.ts",
        "./app/app.spec.ts",
        "./config/config.spec.ts",
        "./di/di.spec.ts",
        "./logger/logger.spec.ts",
        "./plugins/healthz.spec.ts"
    ]
}
